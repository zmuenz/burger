<div class="container">

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h1>Eat-Da-Burger!</h1>
            <img src="../public/assets/img/hamburger-img.jpg">
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12">
            <h2>Available Burgers</h2>

            <ul class="burgers">
                {{#each burgers}}
                    {{#unless devoured}}
                        <p>{{ this.id }}. {{ this.burger_name}}
                        <button class="deleteBtn" id={{this.id}} type="button">Devour it!</button>
                        </p>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-lg-6 col-md-6 col-sm-12">
            <h2>Devoured Burgers</h2>

            <ul class="devoured-burgers">
                {{#each burgers}}
                    {{#if devoured}}
                        <p>{{ this.id }}. {{this.burger_name}}</p>
                    {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h2>Add a Burger</h2>

            <form class="create-burger">

                <div class="form-group">
                    <label for="burger">Enter the name of a burger you'd like to eat</label>
                    <textarea id="ca" name="burger"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Submit Burger</button>
            </form>
        </div>
    </div>

</div>